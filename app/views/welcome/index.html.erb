<% content_for :main_class do %>min-h-screen<% end %>
<div class="min-h-screen md:grid md:grid-cols-2">
  <!-- Left static panel on desktop -->
  <div class="md:sticky md:top-0 md:h-screen flex flex-col justify-start px-6 py-6 bg-gray-50 border-b md:border-b-0 md:border-r">
    <div class="max-w-md mx-auto w-full">
      <div class="flex flex-col items-start">
        <%= image_tag 'https://logos.galtzo.com/assets/images/galtzo-floss/avatar-192px-blank.svg', alt: 'Galtzo FLOSS Logo - no words by Aboling0, CC BY-SA 4.0', class: 'h-16 w-16 mb-6' %>
        <h2 class="text-3xl font-extrabold text-van-cleef">Welcome to FLOSS Funding</h2>
        <p class="mt-2 text-sm text-gray-600">Create an account, log in, or reset your password</p>
      </div>
      <div class="grid grid-cols-1 gap-3 mt-6">
        <%= link_to new_account_path, class: 'w-full flex items-center justify-center gap-2 py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-christi hover:bg-bright-green' do %>
          <%= lucide_icon 'plus', class: 'w-4 h-4' %>
          <span>Create Account</span>
        <% end %>
        <%= link_to new_session_path, class: 'w-full flex items-center justify-center gap-2 py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-limeade hover:bg-bright-green' do %>
          <%= lucide_icon 'key-square', class: 'w-4 h-4' %>
          <span>Log In</span>
        <% end %>
        <%= link_to new_session_path, class: 'w-full flex items-center justify-center gap-2 py-2.5 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-tamarillo hover:bg-van-cleef' do %>
          <%= lucide_icon 'rotate-ccw', class: 'w-4 h-4' %>
          <span>Reset Password</span>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right scrollable homepage content -->
  <div class="px-6 py-10 overflow-y-auto">
    <div class="prose max-w-2xl">
      <h2>What is FLOSS Funding?</h2>
      <p>FLOSS Funding helps maintainers and users of Free/Libre Open Source Software connect around funding. Projects can generate activation keys, display badges, and track engagement to better communicate support options.</p>
      <h3>Why does it exist?</h3>
      <p>Open source is everywhere, but funding it sustainably is hard. This site makes it simple for projects to signal support models and for users to acknowledge and contribute to the tools they depend on.</p>
      <h3>How it works</h3>
      <ul>
        <li>Sign up and create activation keys for your open source projects.</li>
        <li>Optionally mark keys as Free for Open Source and display a badge in your README.</li>
        <li>Feature your projects to be highlighted on the homepage for logged-in users.</li>
      </ul>
    </div>

    <%= render partial: 'featured_carousel', locals: { featured_libraries: @featured_libraries } %>
  </div>
</div>
