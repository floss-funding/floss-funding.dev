<div class="max-w-4xl mx-auto p-6">
  <div class="mb-6">
    <h1 class="text-2xl font-semibold mb-4">Activation Keys</h1>
    <%= link_to 'New Activation Key', new_activation_key_path, class: 'inline-block px-7 py-3.5 text-base bg-christi text-white rounded-md hover:bg-bright-green' %>
  </div>
  <div class="mb-4">
    <%= form_with url: activation_keys_path, method: :get, data: { controller: "auto-submit", auto_submit_delay_value: 200 }, class: "flex flex-col sm:flex-row gap-3 items-start sm:items-end" do %>
      <div>
        <label for="q" class="block text-sm font-medium text-gray-700">Search</label>
        <input type="text" name="q" id="q" value="<%= h(@q) %>" placeholder="Search namespace, key, library, project" class="mt-1 block w-64 rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi" />
      </div>
      <div>
        <label for="sort" class="block text-sm font-medium text-gray-700">Sort</label>
        <select name="sort" id="sort" class="mt-1 block w-56 rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi">
          <option value="new" <%= "selected" if @sort == "new" %>>New to Old</option>
          <option value="old" <%= "selected" if @sort == "old" %>>Old to New</option>
          <option value="a_z" <%= "selected" if @sort == "a_z" %>>A–Z (namespace/key)</option>
          <option value="z_a" <%= "selected" if @sort == "z_a" %>>Z–A (namespace/key)</option>
        </select>
      </div>
      <fieldset class="w-full">
        <legend class="block text-sm font-medium text-gray-700">Languages</legend>
        <div class="mt-1 grid grid-cols-1 sm:grid-cols-2 gap-2">
          <% @all_ecosystems.each do |eco| %>
            <label class="inline-flex items-center gap-2 py-1">
              <input type="checkbox" name="ecosystems[]" value="<%= eco %>" <%= @ecosystems.include?(eco) ? "checked" : nil %> class="rounded border-gray-300 text-christi focus:ring-2 focus:ring-christi" />
              <span class="text-sm text-gray-800"><%= eco %></span>
            </label>
          <% end %>
        </div>
        <p class="text-xs text-gray-500 mt-1">Select one or more languages. Your selections are kept as you add more by touch.</p>
      </fieldset>
    <% end %>
  </div>
  <div class="bg-white shadow overflow-hidden sm:rounded-md">
    <ul role="list" class="divide-y divide-gray-200">
      <% @activation_keys.each do |k| %>
        <li class="px-4 py-4 sm:px-6">
          <div class="flex items-center justify-between">
            <p class="text-sm font-medium text-christi truncate"><%= link_to "#{k.namespace}/#{k.key}", activation_key_path(k), class: 'hover:underline' %></p>
            <div class="ml-2 flex-shrink-0 flex">
              <p class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800"><%= k.ecosystem %></p>
              <% if k.featured? %>
                <p class="ml-2 px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Featured</p>
              <% end %>
            </div>
          </div>
          <div class="mt-2 sm:flex sm:justify-between">
            <div class="sm:flex">
              <p class="flex items-center text-sm text-gray-500">
                <span class="mr-1">Events:</span>
                <%= k.activation_event_count %>
              </p>
            </div>
            <div class="mt-2 flex items-center text-sm text-gray-500 sm:mt-0">
              <p>Created <%= time_ago_in_words(k.created_at) %> ago</p>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
