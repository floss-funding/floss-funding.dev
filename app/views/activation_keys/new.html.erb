<div class="max-w-xl mx-auto p-6">
  <h1 class="text-2xl font-semibold mb-6">New Activation Key</h1>
  <%= form_with model: @activation_key, url: activation_keys_path, class: 'space-y-4' do |f| %>
    <div>
      <%= f.label :namespace, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :namespace, required: true, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi sm:text-sm' %>
    </div>
    <div>
      <%= f.label :key, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.text_field :key, required: true, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi sm:text-sm' %>
    </div>
    <div>
      <%= f.label :ecosystem, class: 'block text-sm font-medium text-gray-700' %>
      <%= f.select :ecosystem, Ecosystem.to_a, {}, class: 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi sm:text-sm' %>
    </div>
    <div class="flex items-center">
      <%= f.check_box :featured, class: 'h-4 w-4 text-christi border-gray-300 rounded' %>
      <%= f.label :featured, class: 'ml-2 block text-sm text-van-cleef' %>
    </div>
    <div>
      <%= f.submit 'Create Activation Key', class: 'px-4 py-2 bg-christi text-white rounded hover:bg-bright-green' %>
    </div>
  <% end %>
</div>
