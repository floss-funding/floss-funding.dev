<h1 class="mt-6">Namespaces</h1>

<table class="min-w-full divide-y divide-gray-200 mt-4">
  <thead class="bg-gray-50">
    <tr>
      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Name</th>
      <th scope="col" class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Activation Keys</th>
    </tr>
  </thead>
  <tbody class="bg-white divide-y divide-gray-200">
    <% @namespaces.each do |ns| %>
      <tr>
        <td class="px-4 py-2 whitespace-nowrap"><%= link_to ns.name, namespace_path(ns), class: 'text-christi hover:underline' %></td>
        <td class="px-4 py-2 whitespace-nowrap"><%= ns.activation_keys.size %></td>
      </tr>
    <% end %>
  </tbody>
</table>
