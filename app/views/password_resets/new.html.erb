<div class="max-w-md mx-auto px-4">
  <h1 class="text-2xl font-bold text-van-cleef mb-4">Reset your password</h1>
  <p class="text-sm text-gray-600 mb-6">Enter your account email and we'll send you a link to reset your password.</p>

  <%= form_with url: password_resets_path, method: :post, local: true do |f| %>
    <div class="mb-4">
      <%= label_tag :email, 'Email address', class: 'block text-sm font-medium text-van-cleef mb-1' %>
      <%= email_field_tag :email, params[:email], required: true, class: 'block w-full rounded-md border-gray-300 shadow-sm focus:border-christi focus:ring-christi' %>
    </div>
    <div>
      <%= submit_tag 'Send reset link', class: 'inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-christi hover:bg-bright-green focus:outline-none' %>
    </div>
  <% end %>
</div>
